<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:background="@drawable/bg_main_background" >

	<!-- Main page background-->
	<ImageView
		android:id="@+id/landing_soon"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:contentDescription="main_page"
		android:src="@drawable/landing_soon" />

	<!--Relative layout for the email input component-->
	<RelativeLayout android:id="@+id/email_input_component_container_container"
		android:layout_marginTop="500dp"
		android:layout_centerHorizontal="true"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:background="@drawable/bg_main_background"
		>

		<!--Get notified Button-->
		<Button
			android:id="@+id/get_notified"
			android:layout_marginStart="380dp"
			android:layout_width="125dp"
			android:layout_height="52.5dp"
			android:background="@drawable/button_shape"
			android:onClick="onGetStartedClick"
			android:textStyle="bold"
			android:textSize="18sp"
			android:textColor="@color/main_text_color"
			android:text="@string/get_notified_string"
			android:textAllCaps="false"/>

		<EditText
			android:id="@+id/input_box_email_uc"
			android:layout_width="360dp"
			android:layout_height="52.5dp"
			android:layout_alignParentStart="true"
			android:background="@drawable/input_box_shape"
			android:hint="@string/enter_your_email_uc_string"
			android:inputType="text"
			android:paddingLeft="12dp"
			android:textColor="@color/white"
			android:textColorHint="@color/hint_input_color"
			android:textSize="16sp" /> <!-- Added this line for left padding -->

	</RelativeLayout>

	<!--Back Button-->
	<Button
		android:id="@+id/back_space_in_under_con"
		android:layout_marginTop="252dp"
		android:layout_marginStart="41dp"
		android:layout_width="50dp"
		android:layout_height="50dp"
		android:background="@drawable/bg_main_background"
		android:drawableStart="@drawable/back_space"
		android:contentDescription="back_space_in_under_con"
		android:text=""
		android:onClick="onButtonClick"/>
	</RelativeLayout>