<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="700dp"
    android:layout_height="700dp"
    android:background="@drawable/bg_main_background_shape">

    <TextView android:id="@+id/send_review_title"
        android:textSize="60sp"
        android:textColor="@color/main_text_color"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="70dp"
        android:layout_width="405dp"
        android:layout_height="70.5dp"
        android:textStyle="bold"
        android:text="@string/send_review_string" />

    <Button android:id="@+id/send_review_button"
        android:layout_marginTop="632dp"
        android:layout_centerHorizontal="true"
        android:layout_height="45dp"
        android:layout_width="140dp"
        android:background="@drawable/secondary_button_shape"
        android:textColor="@color/main_text_color"
        android:text="@string/send_review_string"
        />

    <RelativeLayout android:id="@+id/professor_input_box"
        android:layout_marginTop="175dp"
        android:layout_centerHorizontal="true"
        android:layout_width="540dp"
        android:layout_height="wrap_content"
        >

        <TextView android:id="@+id/professor_label"
            android:textSize="15sp"
            android:textColor="@color/main_text_color"
            android:layout_marginTop="1dp"
            android:layout_width="136.5dp"
            android:layout_height="22.5dp"
            android:text="@string/professor_label_string"
            />

        <EditText
            android:id="@+id/input_box_professor"
            android:layout_width="320dp"
            android:layout_height="52.5dp"
            android:layout_alignParentStart="true"
            android:layout_marginTop="21.5dp"
            android:background="@drawable/input_box_shape"
            android:hint="@string/enter_professor_string"
            android:inputType="text"
            android:paddingLeft="12dp"
            android:textColor="@color/white"
            android:textColorHint="@color/hint_input_color"
            android:textSize="16sp" /> <!-- Added this line for left padding -->
    </RelativeLayout>

    <RelativeLayout android:id="@+id/second_row"
        android:layout_marginTop="268dp"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        >

        <RelativeLayout android:id="@+id/rating_input_box"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            >

            <TextView android:id="@+id/rating_label"
                android:textSize="15sp"
                android:textColor="@color/main_text_color"
                android:layout_marginTop="1dp"
                android:layout_width="136.5dp"
                android:layout_height="22.5dp"
                android:text="@string/rating_label_string"
                />

            <EditText
                android:id="@+id/input_box_rating"
                android:layout_width="130dp"
                android:layout_height="52.5dp"
                android:layout_alignParentStart="true"
                android:layout_marginTop="21.5dp"
                android:background="@drawable/input_box_shape"
                android:hint="@string/enter_rating_string"
                android:inputType="number"
                android:paddingLeft="12dp"
                android:textColor="@color/white"
                android:textColorHint="@color/hint_input_color"
                android:textSize="16sp" /> <!-- Added this line for left padding -->
        </RelativeLayout>

        <RelativeLayout android:id="@+id/teaching_input_box"
            android:layout_marginStart="142dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            >

            <TextView android:id="@+id/teaching_label"
                android:textSize="15sp"
                android:textColor="@color/main_text_color"
                android:layout_marginTop="1dp"
                android:layout_width="136.5dp"
                android:layout_height="22.5dp"
                android:text="@string/teaching_label_string"
                />

            <EditText
                android:id="@+id/input_box_teaching"
                android:layout_width="400dp"
                android:layout_height="52.5dp"
                android:layout_alignParentStart="true"
                android:layout_marginTop="21.5dp"
                android:background="@drawable/input_box_shape"
                android:hint="@string/enter_teaching_style_string"
                android:inputType="text"
                android:paddingLeft="12dp"
                android:textColor="@color/white"
                android:textColorHint="@color/hint_input_color"
                android:textSize="16sp" /> <!-- Added this line for left padding -->
        </RelativeLayout>
    </RelativeLayout>

    <RelativeLayout android:id="@+id/main_review_input_box"
        android:layout_marginTop="355dp"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        >

        <TextView android:id="@+id/main_review_label"
            android:textSize="15sp"
            android:textColor="@color/main_text_color"
            android:layout_marginTop="1dp"
            android:layout_width="136.5dp"
            android:layout_height="22.5dp"
            android:text="@string/review_label_string"
            />

        <EditText
            android:id="@+id/input_box_main_review"
            android:layout_width="540dp"
            android:layout_height="240dp"
            android:layout_marginTop="21.5dp"
            android:background="@drawable/input_box_shape"
            android:hint="@string/enter_main_review_string"
            android:inputType="text"
            android:paddingLeft="12dp"
            android:textColor="@color/white"
            android:textColorHint="@color/hint_input_color"
            android:textSize="16sp" /> <!-- Added this line for left padding -->
    </RelativeLayout>
</RelativeLayout>
